@model WebRentaCar2.Models.LoginUsuarioViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Bienvenido a AutoRent</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center">Por favor, identifíquese</h4>
                    <hr />
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Correo" class="form-label"></label>
                            <input asp-for="Correo" class="form-control" placeholder="Ingrese su correo electrónico" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <input type="submit" value="Enviar" class="btn btn-danger btn-block" />
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <small class="text-muted">¿No tienes una cuenta? <a href="@Url.Action("Registro", "Usuario")">Regístrate aquí</a></small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
